FROM python:3.8.13-alpine

# mir pb components: 1.1.0
RUN mkdir -p /app/ymir_1_1_0/mir/protos/
RUN wget https://raw.githubusercontent.com/IndustryEssentials/ymir/release-1.1.0/ymir/command/mir/protos/mir_command_pb2.py \
         -P /app/ymir_1_1_0/mir/protos/
# mir pb components: 1.3.0 (dev)
RUN mkdir -p /app/ymir_1_3_0/mir/protos/
RUN wget https://raw.githubusercontent.com/IndustryEssentials/ymir/dev/ymir/command/mir/protos/mir_command_pb2.py \
         -P /app/ymir_1_3_0/mir/protos/

# ymir backend components
COPY ./backend/src/common/common_utils/version.py /app/common_utils/version.py
COPY ./backend/src/common/common_utils/sandbox.py /app/common_utils/sandbox.py
COPY ./backend/src/common/id_definition/error_codes.py /app/id_definition/error_codes.py

# updater app
COPY ./updater/app /app
RUN pip3 install -r /app/requirements.txt

CMD python /app/start.py
