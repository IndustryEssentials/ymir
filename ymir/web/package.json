{
  "name": "ymir-web",
  "version": "0.3.0",
  "private": true,
  "scripts": {
    "local": "APP_ROOT=../pages/demo1 umi dev",
    "analyze": "cross-env UMI_ENV=dev ANALYZE=1 umi dev",
    "start": "cross-env UMI_ENV=local umi dev",
    "build": "cross-env UMI_ENV=dev umi build",
    "build:dev": "cross-env UMI_ENV=dev umi build",
    "build:prod": "cross-env UMI_ENV=prod umi build",
    "postinstall": "umi generate tmp",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage"
  },
  "pre-push": [
    "test"
  ],
  "prettier": {
    "semi": false,
    "tabWidth": 2
  },
  "jest": {
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**/*.{js,ts,tsx}",
      "!./src/assets/**",
      "!./src/components/**",
      "!./src/pages/**",
      "!./src/layouts/**",
      "!./src/locales/**",
      "!**/__mock__/**",
      "!**/node_modules/**",
      "!**/.umi/**",
      "!**/.umi-production/**"
    ],
    "coverageReporters": [
      "html",
      "text-summary"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@ant-design/pro-layout": "^6.5.0",
    "@antv/graphin": "^2.3.6",
    "@antv/graphin-components": "^2.3.0",
    "@antv/graphin-icons": "^1.0.0",
    "@umijs/preset-react": "^1.8.26",
    "antd": "^4.16.0",
    "antd-img-crop": "^3.16.0",
    "axios": "^0.21.4",
    "color": "^4.0.1",
    "crypto-js": "^4.1.1",
    "echarts": "^5.1.2",
    "qs": "^6.10.1",
    "redux-saga": "^1.1.3",
    "umi": "^3.5.3"
  },
  "devDependencies": {
    "@testing-library/react-hooks": "^7.0.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@umijs/test": "^3.5.20",
    "cross-env": "^7.0.3",
    "lint-staged": "^10.0.7",
    "prettier": "^2.2.0",
    "react": "17.x",
    "react-dom": "17.x",
    "react-test-renderer": "^17.0.2",
    "redux-mock-store": "^1.5.4",
    "typescript": "^4.1.2",
    "url-loader": "^4.1.1",
    "webpack-chain": "^6.5.1",
    "yorkie": "^2.0.0"
  }
}
